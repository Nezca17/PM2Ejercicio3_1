<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM2Ejercicio3_1.Views.ListaAlumnos">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="AlumnosListView" ItemsSource="{Binding Alumnos}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Image Source="{Binding Imagen}" HeightRequest="100" />
                                <Label Text="{Binding Nombres}" />
                                <Label Text="{Binding Apellidos}" />
                                <Label Text="{Binding Sexo}" />
                                <Label Text="{Binding Direccion}" />
                                
                                <Button Text="Modificar" Clicked="Button_Clicked_1" CommandParameter="{Binding .}" />
                                <Button Text="Eliminar" Clicked="Button_Clicked_2" CommandParameter="{Binding .}" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
