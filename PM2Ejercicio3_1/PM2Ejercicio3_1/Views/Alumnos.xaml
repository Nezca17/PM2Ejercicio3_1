<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM2Ejercicio3_1.Views.Alumnos">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ingrese los datos del alumno:" 
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand" />

            <Entry Placeholder="Nombres" x:Name="NombresEntry" />
            <Entry Placeholder="Apellidos" x:Name="ApellidosEntry" />

            <Picker Title="Seleccione el sexo" x:Name="SexoPicker">
                <Picker.Items>
                    <x:String>Masculino</x:String>
                    <x:String>Femenino</x:String>
                </Picker.Items>
            </Picker>

            <Entry Placeholder="Dirección" x:Name="DireccionEntry" />

            <Button Text="Tomar foto" Clicked="SeleccionarImagen_Clicked" />
            <Image x:Name="ImagenPreview" HeightRequest="150" />

            <Button Text="Guardar" Clicked="Guardar_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
